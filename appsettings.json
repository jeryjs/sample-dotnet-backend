{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "41187e1f-0e9a-40b2-b737-898908731b5f",
    "ClientId": "096ab163-28e7-492b-9887-1846102f4956",
    "Audience": "api://096ab163-28e7-492b-9887-1846102f4956",
    "_ClientSecretNote": "ClientSecret must be stored in user-secrets. DO NOT add the actual secret here. Use 'dotnet user-secrets set AzureAd:ClientSecret <your-secret>' to configure.",
    "GroupRoleMappings": {
      "group-object-id-1": "Admin",
      "group-object-id-2": "User"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [ "*" ]
  },
  "Swagger": {
    "Enabled": true,
    "RoutePrefix": "swagger"
  },
  "DataFiles": {
    "PatientsDataPath": "../all_patients_data_f.json",
    "AncillaryUsersDataPath": "../getActiveAncillaryUsers.json",
    "ContactUsersDataPath": "../getActiveContactUsers.json"
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "WAVBackendAPI",
    "PatientsCollectionName": "patients",
    "AncillaryUsersCollectionName": "ancillary_users",
    "ContactUsersCollectionName": "contact_users",
    "ConnectionTimeoutSeconds": 30,
    "ServerSelectionTimeoutSeconds": 30,
    "MaxConnectionPoolSize": 100,
    "MinConnectionPoolSize": 10,
    "RetryWrites": true,
    "RetryReads": true
  }
}
